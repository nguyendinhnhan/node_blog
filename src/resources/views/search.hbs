<div class="mt-4">
  <form method="POST" action="/search">
    <div class="form-group">
      <label for="search-input">Enter text</label>
      <input type="text" name="q" class="form-control" id="search-input" placeholder="Your text...">
    </div>

    <div class="form-group">
      <label for="gender-input">Sex</label>
      <select name="gender" class="form-control" id="gender-input">
        <option value="">--Select an option--</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>